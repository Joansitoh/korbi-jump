{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/socket.io/(.*)",
            "dest": "server.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*).(js|css|html|png|jpg|jpeg|gif|ico|json)",
            "dest": "/public/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
} 